<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/about_background_color"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.accenter.com.accentermobile.admin.BuatArtikel">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/about_background_color"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="judul"
            android:inputType="text" />

        <ImageView
            android:id="@+id/imageViewArtikel"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/etJudul"
            android:layout_gravity="center_horizontal"
            android:layout_margin="12dp"
            android:layout_marginTop="10dp"
            android:background="#fefefe"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/btnPilihGambar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/etIsiArtikel"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="#f86b4b"
            android:text="Pilih Gambar"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/etIsiArtikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/etTglArtikel"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="top|left"
            android:hint="isi.."
            android:inputType="textMultiLine"
            android:lines="7" />

        <EditText
            android:id="@+id/etTglArtikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonPost"
            android:clickable="true"
            android:ems="10"
            android:focusable="false"
            android:hint="tgl" />

        <Button
            android:id="@+id/buttonPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Posting" />
    </LinearLayout>
</RelativeLayout>
