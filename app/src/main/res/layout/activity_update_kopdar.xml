<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/about_background_color"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.accenter.com.accentermobile.admin.UpdateKopdar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/about_background_color"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etJudulKopdar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:hint="Judul Kopdar"
            android:inputType="text"
            android:singleLine="false" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Pilih Region"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/etRegionKopdar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Regional / Chapter" />

        <EditText
            android:id="@+id/etTglPostKopdar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Tanggal Posting"
            android:inputType="date"
            android:longClickable="false" />

        <EditText
            android:id="@+id/etPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Posting Oleh"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/etIsiKopdar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:hint="Deskripsi.."
            android:inputType="textCapWords|textMultiLine"
            android:lines="9"
            android:nestedScrollingEnabled="true"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnPostKopdar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/btn_login"
            android:text="Posting"
            android:textColor="@color/about_background_color" />

    </LinearLayout>
</RelativeLayout>
